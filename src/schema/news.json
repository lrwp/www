{
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "_id": {
            "type": "string",
            "required": true
        },
        "_rev": {
            "type": "string"
        },
        "_revisions":{
            "type": "object"
        },
        "schema": {
            "type": "string",
            "required": true
        },
        "title": {
            "type": "string",
            "required": true,
            "description": "Headline of the news article, displayed on the homepage and above the content.",
        },
        "content": {
            "type": "string",
            "required": true,
            "description": "Main content for news article, only shown on the news and updates page."
        },
        "created": {
            "type": "string",
            "required": true,
            "description": "News articles are sorted ascending by create date."
        },
        "modified": {
            "type": "string"
        },
        "author": {
            "type": "string",
            "required": true
        }
    }
}
