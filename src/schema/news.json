{
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "_id": {
            "type": "string",
            "required": true
        },
        "_rev": {
            "type": "string"
        },
        "_revisions":{
            "type": "object"
        },
        "schema": {
            "type": "string",
            "required": true
        },
        "title": {
            "type": "string",
            "required": true,
            "description": "Headline for the news article, it will be displayed on the homepage."
        },
        "content": {
            "type": "string",
            "required": true,
            "description": "Main content for news article, only shown on the news and updates page."
        },
       "rank": {
            "type": "integer",
            "required": true,
            "description": "News articles are sorted ascending by rank. The lower the rank, the higher the in the list it will be."
        }, 
        "created": {
            "type": "string",
            "required": true,
            "description": "Date and time the article was created."
        },
        "modified": {
            "type": "string"
        },
        "author": {
            "type": "string",
            "required": true
        },
        "archive": {
            "type": "boolean",
            "description": "When checked, this item will not show up with other items on the website."
        },
        "key": {
            "type": "string",
            "required": true,
            "default": "rank"
        }
    }
}
