{
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "_id": {
            "type": "string",
            "required": true
        },
        "_rev": {
            "type": "string"
        },
        "_revisions":{
            "type": "object"
        },
        "schema": {
            "type": "string",
            "required": true
        },
        "title": {
            "type": "string",
            "required": true,
            "description": "Headline of news brief, will be shown on the homepage and above content."
        },
        "content": {
            "type": "string",
            "required": true,
            "description": "Main content of the news brief, will be shown on the news and updates page."
       },
       "rank": {
            "type": "integer",
            "required": true,
            "description": "The lower the number the higher the position of the brief in the list."
       },
        "created": {
            "type": "string",
            "required": true,
            "description": "News briefs are sorted ascending by create date. This date is also shown on the news and updates page."
        },
        "modified": {
            "type": "string"
        },
        "author": {
            "type": "string",
            "required": true
       },
       "key": {
            "type": "string",
            "required": true,
            "default": "rank"
        }
    }
}
