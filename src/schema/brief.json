{
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "_id": {
            "type": "string",
            "required": true
        },
        "_rev": {
            "type": "string"
        },
        "_revisions":{
            "type": "object"
        },
        "schema": {
            "type": "string",
            "required": true
        },
        "title": {
            "type": "string",
            "required": true,
            "description": "This is the headline for the news brief, it will be shown on the homepage."
        },
        "content": {
            "type": "string",
            "required": true,
            "description": "This is content of the news brief, it will be shown on the news and updates page below the title."
       },
       "rank": {
            "type": "integer",
            "required": true,
            "description": "The news briefs are sorted ascending by rank. The lower the rank, the higher in the list it will be."
       },
        "created": {
            "type": "string",
            "required": true,
            "description": "The date the news brief was created."
        },
        "modified": {
            "type": "string"
        },
        "author": {
            "type": "string",
            "required": true
       },
       "archive": {
            "type": "boolean",
            "description": "When checked, this item will not show up with other items on the website."
       },
       "key": {
            "type": "string",
            "required": true,
            "default": "rank"
        }
    }
}
