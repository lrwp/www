{
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "_id": {
            "type": "string",
            "required": true
        },
        "_rev": {
            "type": "string"
        },
        "_revisions":{
            "type": "object"
        },
        "schema": {
            "type": "string",
            "required": true
        },
        "title": {
            "type": "string",
            "required": true
        },
       "link": {
            "type": "string",
            "description": "Optional link that the user is sent to when clicking on this image. It can be a relative link (/page/committees) or absolute (http://http://www.acreslandtrust.org/)."
        },
        "content": {
            "type": "string",
            "required": true,
            "description": "Content that is shown below the title, should be fairly short with minimal formatting."
        },
        "_attachments": {
            "type": "object"
        },
       "key": {
            "type":"string",
            "required": true,
            "default": "rank"
        },
        "rank":{
            "type": "integer",
            "required": true,
            "description": "A number used to sort the slide images, the lower the number the sooner it will appear in the list of images"
        },
        "created": {
            "type": "string",
            "required": true
        },
        "modified": {
            "type": "string"
        },
        "author": {
            "type": "string",
            "required": true
        }
    }
}
